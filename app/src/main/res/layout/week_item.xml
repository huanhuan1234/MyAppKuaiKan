<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#F8FAFA"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/rect_shape"
            android:textSize="12sp"
            android:text="爆笑"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/week_item_type"/>

        <TextView
            android:textSize="16sp"
            android:textColor="#282828"
            android:text="标题"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/week_item_title"/>


        <TextView
            android:textSize="14sp"
            android:textColor="#969696"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全集 > "/>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/week_item_imageview"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" android:gravity="center" android:orientation="horizontal">



        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#969696"
            android:text="11111"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/week_item_sub_title"/>


        <LinearLayout
            android:gravity="center"
            android:layout_width="160dp"
            android:layout_height="match_parent" android:orientation="horizontal" >

            <LinearLayout
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp" android:orientation="horizontal">

                <ImageView
                    android:id="@+id/week_item_image_zan"
                    android:src="@drawable/zan_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            


            <TextView
                android:textSize="12sp"
                android:textColor="#969696"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111111"
                android:id="@+id/week_item_zannum"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/week_item_image_comment"
                android:src="@drawable/comment_bg"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:textSize="12sp"
                android:textColor="#969696"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111111"
                android:id="@+id/week_item_comment"/>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>
