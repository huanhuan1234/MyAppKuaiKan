<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="radioButton1" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/color_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="radioGroup" parent="radioButton">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="title" parent="radioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_title_selector</item>
    </style>
    <style name="title_zuo" parent="title">
        <item name="android:background">@drawable/titlezuo_selector</item>
    </style>
    <style name="title_you" parent="title">
        <item name="android:background">@drawable/titleyou_selector</item>
    </style>

    <style name="imageView" parent="radioButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="image_you" parent="imageView">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@mipmap/fadajing</item>
    </style>


    <style name="rg_bf" parent="radioButton">
        <item name="android:drawableTop">@drawable/bf_selector</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">10dp</item>

    </style>

</resources>
